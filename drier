    <script>
        function click1(){
            document.calc.disp.value+=1;
    }
        function click2(){
            document.calc.disp.value+=2;
    }
        function click3(){
            document.calc.disp.value+=3;
    }
        function click4(){
            document.calc.disp.value+=4;
    }
        function click5(){
            document.calc.disp.value+=5;
    }

        function click6(){
            document.calc.disp.value+=6;
    }

        function click7(){
            document.calc.disp.value+=7;
    }

        function click8(){
            document.calc.disp.value+=8;
    }
        function click9(){
            document.calc.disp.value+=9;
    }


        function click0(){
            document.calc.disp.value+=0;
    }
        function add(){
            document.calc.disp.value+="+";
        }
        function sub(){
            document.calc.disp.value+="-";
        }
        function mul(){
            document.calc.disp.value+="*";
        }
        function div(){
            document.calc.disp.value+="/";
        }
        function equal(){
            if(document.calc.disp.value==""){
                var eq="";
            }
            else{
                var eq=eval(document.calc.disp.value)
            }
            document.calc.disp.value=eq;
        }
        function deci(){
            document.calc.disp.value+=".";
        }
        function per(){
            document.calc.disp.value+="%";
        }
        function par1(){
            document.calc.disp.value+="(";
        }
        function par2(){
            document.calc.disp.value+=")";
        }
        function AC(){
            document.calc.disp.value="";
        }


    </script>
